<% Task.get_priority_tasks_for_today.each do |day, tasks | %>
  <% tasks.each do |task| %>
    <div class="flex justify-center my-2">
      <div class="block rounded-lg shadow-lg bg-zinc-100 max-w-sm px-20 text-center">
        <div class="py-2 px-6 border-b border-gray-300 text-gray-700">
          <%= task.category.name %>
        </div>
        <div class="p-2">
          <h5 class="text-gray-900 text-xl font-medium mb-1"><%= task.title %></h5>
          <p class="text-gray-700 text-base mb-2">
            <%= task.content %>
          </p>
        </div>
        <div class="py-2 px-6 border-t text-xs border-gray-300 text-gray-600">
          <%= task.priority.strftime("%b %d, %y, %l:%M %P") %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>

